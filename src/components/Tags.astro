---
import Link from "@ui/Link.astro";

type Props = {
    tags: string[];
    type: "blog" | "projects";
};

const { tags, type } = Astro.props;
---

<ul class="flex flex-wrap gap-2">
    {
        tags.map((tag) => (
            <li>
                <Link
                    variant="secondary"
                    size="sm"
                    href={`/${type}/tag/${tag}`}
                >
                    {tag}
                </Link>
            </li>
        ))
    }
</ul>
