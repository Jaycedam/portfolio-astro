---
import { Image } from "astro:assets";
import hero from "@components/assets/profile.webp";
import { buttonVariants } from "@components/ui/button";
import { Code, MailPlus } from "lucide-react";
---

<section>
  <div class="container flex flex-col items-center justify-center gap-8">
    {/* graphic for hero  */}
    <div class="relative">
      <p
        class="absolute -right-16 -top-4 z-10 whitespace-nowrap rounded-3xl bg-foreground/10 p-4 font-black text-foreground shadow backdrop-blur"
      >
        {"// Hello, World."}
      </p>

      <Image
        alt=""
        width={400}
        height={400}
        src={hero}
        class="rounded-full max-w-[200px]"
        loading="eager"
        format="avif"
        quality="high"
      />
    </div>

    <div class="space-y-8 text-center animate-fade-up-500">
      <div class="space-y-2">
        <h1 class="text-5xl font-black tracking-tight md:text-7xl lg:text-8xl">
          Jordan Cort√©s
          <br />
          Software{" "}
          <strong
            class="animate-gradient bg-gradient-to-r from-orange-400 via-fuchsia-400 to-blue-400 bg-clip-text text-transparent"
          >
            Dev.
          </strong>
        </h1>

        <h2 class="prose text-xl text-muted-foreground">
          Currently focused on full stack web development (Next.js, Typescript,
          Astro)
        </h2>
      </div>
    </div>

    <div class="flex gap-4 animate-fade-up-600">
      <a
        class={buttonVariants({ variant: "default", size: "lg" })}
        href="/projects"
      >
        <Code className="h-5" /> &nbsp; Projects
      </a>

      <a
        class={buttonVariants({ variant: "outline", size: "lg" })}
        href="/#contact"
      >
        <MailPlus className="h-5" /> &nbsp; Contact
      </a>
    </div>
  </div>
</section>
