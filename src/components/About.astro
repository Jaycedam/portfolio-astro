---
import { buttonVariants } from "@components/ui/button";

const items1: string[] = [
  "Next.js",
  "React",
  "Astro",
  "Typescript",
  "TailwindCSS",
  "SQL",
  "Prisma",
  "Python",
  "Django",
  "Framer Motion",
  "Zod",
  "React Hook Form",
];

const items2: string[] = [
  "C#",
  "Java",
  "Spring Boot",
  "PL/SQL",
  "Bootstrap",
  "SASS",
];
---

<section class="container grid gap-8 lg:grid-cols-[1fr_65ch_1fr]" id="about">
  <h2 class="heading lg:justify-self-end">About me</h2>

  <div class="mx-auto space-y-8">
    {/* knoledge section  */}
    <div class="space-y-8">
      <div class="space-y-2">
        <p class="font-bold">Languages, frameworks or libraries that I've used the most</p>
        <div class="flex flex-wrap gap-4">
          {
            items1.map((item) => (
              <p
                class={`motion-safe:fade-up ${buttonVariants({
                  variant: "outline",
                })}`}
              >
                {item}
              </p>
            ))
          }
        </div>
      </div>

      <div class="space-y-2">
        <p class="font-bold">Used less often</p>
        <div class="flex flex-wrap gap-4">
          {
            items2.map((item) => (
              <p
                class={`motion-safe:fade-up ${buttonVariants({
                  variant: "outline",
                })}`}
              >
                {item}
              </p>
            ))
          }
        </div>
      </div>
    </div>

    <hr />

    <p class="prose font-light italic text-muted-foreground">
      For my previous work with Motion Graphics visit
      <a class="text-primary" target="_blank" href="https://dribbble.com/jaycedam"> Dribbble</a>
    </p>
  </div>
</section>
