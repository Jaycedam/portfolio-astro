---
import type { Blog } from "@lib/types";
import FormattedDate from "@components/FormattedDate.astro";

type Props = {
    item: Blog;
};

const { item } = Astro.props;
---

<li transition:name={"blog-card-" + item.id}>
    <a
        transition:name={"text" + item.id}
        class="group h-auto w-full space-y-2"
        href={`/blog/${item.id}`}
    >
        <div>
            <p class="text-sm text-muted-foreground">
                <FormattedDate date={item.data.date} includeDay />
            </p>
            <h3 class="text-2xl font-bold">{item.data.title}</h3>
        </div>
        <p class="font-light text-muted-foreground">{item.data.description}</p>
    </a>
</li>
